                            <div class="card-body p-0">
                                <!-- Nested Row within Card Body -->
                                <div class="row">
                                    <div class="col-lg-5 d-none d-lg-block bg-gradient-primary">
                                        <h1 style="font-weight:700; margin-left:100px; margin-top:200px; color:white">Seal Travels <i class="fa fa-globe-americas"></i></h1>
                                    </div>
                                    <div class="col-lg-7">
                                        <div class="p-5">
                                            <div class="">
                                                <h4 class="" style="color:#4e73df; font-family:Heebo"><strong>Book a Oneway flight</strong> <i class="fa fa-plane"></i></h4><br />
                                            </div>
                                            <!--Roundtrip Booking Form-->
                                            <form class="user">

                                                <div class="form-group row">
                                                    <!--Name-->
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "", @style = "width: 150px;color: #4e73df;font-weight: bold;font-size: 13px;" })
                                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name", @required = "required", @style = "font-size: 13px" } })
                                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                                    </div>

                                                    <!--Email-->
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "", @style = "width: 150px;color: #4e73df;font-weight: bold;font-size: 13px;" })
                                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @required = "required", @style = "font-size: 13px" } })
                                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <!--Leaving From-->
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        @Html.LabelFor(model => model.LeavingFrom, htmlAttributes: new { @class = "", @style = "width: 150px;color: #4e73df;font-weight: bold;font-size: 13px;" })
                                                        <div class="dropdown">
                                                            @Html.DropDownList("Leaving From", new List<SelectListItem>
                                                                 {
                                                                 new SelectListItem{Text = "Nairobi", Value = "Nairobi" },
                                                                 new SelectListItem{Text = "Entebbe", Value = "Entebbe" },
                                                                 new SelectListItem{Text = "Lesotho", Value = "Lesotho" },
                                                                 new SelectListItem{Text = "Cairo", Value = "Cairo" },
                                                                 new SelectListItem{Text = "Addis Ababa", Value = "Addis Ababa" },
                                                        }, "Select", htmlAttributes: new { @class = "form-control dropdown-toggle text-left", @datatoggle = "dropdown", @required = "required", @style = "font-size: 13px" })
                                                            @Html.ValidationMessageFor(model => model.LeavingFrom, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <!--Going To-->
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        @Html.LabelFor(model => model.GoingTo, htmlAttributes: new { @class = "", @style = "width: 150px;color: #4e73df;font-weight: bold; font-size: 13px;" })
