                                                                 new SelectListItem{Text = "7", Value = "7" },
                                                                 new SelectListItem{Text = "8", Value = "8" },
                                                                 new SelectListItem{Text = "9", Value = "9" },
                                                                 new SelectListItem{Text = "10", Value = "10" }
                                                        }, "Select", htmlAttributes: new { @class = "form-control dropdown-toggle text-left", @datatoggle = "dropdown", @required = "required", @style = "font-size: 13px" })
                                                            @Html.ValidationMessageFor(model => model.Children, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <!--Trip Type-->
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        @Html.LabelFor(model => model.TripType, htmlAttributes: new { @class = "", @style = "width: 150px;color: #4e73df;font-weight: bold;font-size: 13px;" })
                                                        @Html.EditorFor(model => model.TripType, new { htmlAttributes = new { @class = "form-control", @placeholder = "TripType", @required = "required", @style = "font-size: 13px" } })
                                                        @Html.ValidationMessageFor(model => model.TripType, "", new { @class = "text-danger" })
                                                    </div>

                                                    <!--Flight Type-->
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        @Html.LabelFor(model => model.FlightType, htmlAttributes: new { @class = "", @style = "width: 150px; color: #4e73df; font-weight: bold;font-size: 13px;" })
                                                        <div class="dropdown" style="">
                                                            @Html.DropDownList("Flight Type", new List<SelectListItem>
                                                                 {
                                                                 new SelectListItem{Text = "Nonstop", Value = "Nonstop"},
                                                                 new SelectListItem{Text = "Refundable", Value = "Refundable" },
                                                        }, "Select", htmlAttributes: new { @class = "form-control dropdown-toggle text-left", @datatoggle = "dropdown", @required = "required", @style = "font-size: 13px" })
                                                            @Html.ValidationMessageFor(model => model.FlightType, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <!--Travel Class-->
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        @Html.LabelFor(model => model.TravelClass, htmlAttributes: new { @class = "", @style = "width: 150px; color: #4e73df; font-weight: bold;font-size: 13px;" })
                                                        <div class="dropdown" style="">
                                                            @Html.DropDownList("Travel Class", new List<SelectListItem>
                                                                 {
                                                                 new SelectListItem{Text = "First Class", Value = "Nonstop"},
                                                                 new SelectListItem{Text = "Economy", Value = "Refundable" },
                                                                 new SelectListItem{Text = "Business", Value = "Business" },
                                                        }, "Select", htmlAttributes: new { @class = "form-control dropdown-toggle text-left", @datatoggle = "dropdown", @required = "required", @style = "font-size: 13px" })
                                                            @Html.ValidationMessageFor(model => model.TravelClass, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>


                                                    <!--Airline-->
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        @Html.LabelFor(model => model.Airline, htmlAttributes: new { @class = "", @style = "width: 150px; color: #4e73df; font-weight: bold;font-size: 13px;" })
                                                        <div class="dropdown" style="">
                                                            @Html.DropDownList("Airline", new List<SelectListItem>
                                                                {
                                                                new SelectListItem{Text = "Uganda Airlines", Value = "Uganda Airlines"},
                                                                new SelectListItem{Text = "Rwanda Air", Value = "Rwanda Air" },
                                                                new SelectListItem{Text = "Kenya Airways", Value = "Kenya Airways" },
                                                                new SelectListItem{Text = "Fly Dubai", Value = "Fly Dubai" },
                                                                new SelectListItem{Text = "Ethiopian Airlines", Value = "Ethiopian Airlines" },
                                                                new SelectListItem{Text = "Egypt Air", Value = "Egypt Air" },
                                                                new SelectListItem{Text = "Hahn Air", Value = "Hahn Air" },
                                                                new SelectListItem{Text = "Turkish Airlines", Value = "Turkish Airlines" },
                                                                new SelectListItem{Text = "Brussels Airlines", Value = "Brussels Airlines" },
                                                                new SelectListItem{Text = "KLM", Value = "KLM" },
                                                                new SelectListItem{Text = "Qatar Airways", Value = "Qatar Airways" }
