                                                            @Html.DropDownList("Going To", new List<SelectListItem>
                                                                 {
                                                                 new SelectListItem{Text = "Nairobi", Value = "Nairobi" },
                                                                 new SelectListItem{Text = "Entebbe", Value = "Entebbe" },
                                                                 new SelectListItem{Text = "Lesotho", Value = "Lesotho" },
                                                                 new SelectListItem{Text = "Cairo", Value = "Cairo" },
                                                                 new SelectListItem{Text = "Addis Ababa", Value = "Addis Ababa" },
                                                        }, "Select", htmlAttributes: new { @class = "form-control dropdown-toggle text-left", @datatoggle = "dropdown", @required = "required", @style = "font-size: 13px" })
                                                            @Html.ValidationMessageFor(model => model.GoingTo, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <!--Departing-->
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        @Html.LabelFor(model => model.Departing, htmlAttributes: new { @class = "", @style = "width: 150px;color: #4e73df;font-weight: bold;font-size: 13px;" })
                                                        @Html.EditorFor(model => model.Departing, new { htmlAttributes = new { @class = "form-control", @type = "date", @required = "required", @style = "font-size: 13px" } })
                                                        @Html.ValidationMessageFor(model => model.Departing, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <!--Adults-->
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        @Html.LabelFor(model => model.Adults, htmlAttributes: new { @class = "", @style = "width: 150px; color: #4e73df; font-weight: bold;font-size: 13px;" })
                                                        <div class="dropdown" style="">
                                                            @Html.DropDownList("Adults", new List<SelectListItem>
                                                                 {
                                                                 new SelectListItem{Text = "None", Value = "None"},
                                                                 new SelectListItem{Text = "1", Value = "1" },
                                                                 new SelectListItem{Text = "2", Value = "2" },
                                                                 new SelectListItem{Text = "3", Value = "3" },
                                                                 new SelectListItem{Text = "4", Value = "4" },
                                                                 new SelectListItem{Text = "5", Value = "5" },
                                                                 new SelectListItem{Text = "6", Value = "6" },
                                                                 new SelectListItem{Text = "7", Value = "7" },
                                                                 new SelectListItem{Text = "8", Value = "8" },
                                                                 new SelectListItem{Text = "9", Value = "9" },
                                                                 new SelectListItem{Text = "10", Value = "10" }
                                                        }, "Select", htmlAttributes: new { @class = "form-control dropdown-toggle text-left", @datatoggle = "dropdown", @required = "required", @style = "font-size: 13px" })
                                                            @Html.ValidationMessageFor(model => model.Adults, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <!--Children-->
                                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                                        @Html.LabelFor(model => model.Children, htmlAttributes: new { @class = "", @style = "width: 150px; color: #4e73df; font-weight: bold;font-size: 13px;" })
                                                        <div class="dropdown" style="">
